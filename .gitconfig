[color]
  ui = always
	diff = auto

[core]
  autocrlf = input
  safecrlf = warn
  editor = emacsclient

[alias]
  # misc
  ci = commit
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  s = status
  a = add
  aa = add --all
  pu = "!git push -u origin \"$(git rev-parse --abbrev-ref HEAD)\""
  puf = push --force-with-lease
  d = diff
  dc = diff --cached
  amend = commit --amend --no-edit

  # branch
  b = branch
  bd = branch -D
  co = checkout
  chb = checkout -b

  l = log --oneline --graph

[branch]
  autosetuprebase = always

[rebase]
  stat = true

[rerere]
  enabled = true

[hub]
  protocol = ssh

[commit]
  gpgsign = true
[github]
	user = merildev
