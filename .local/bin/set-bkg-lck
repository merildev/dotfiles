#!/usr/bin/env bash

IMG=$(xdg-user-dir PICTURES)

function dl() {
    local online=$(ping -q -w1 -c1 gnu.org &>/dev/null && echo OK || echo KO)

    if [ "$online" == "OK" ] ; then
        wget --quiet --output-document="${IMG}"/lck.png https://cldup.com/fO2nWH2ugM.png
        cp "${IMG}"/lck.png "${IMG}"/bkg.png
    fi
}

dl
